# syntax=docker/dockerfile:1

FROM node:latest

EXPOSE 8080

USER root

COPY . /server

WORKDIR /server

RUN yarn install 

RUN yarn global add nodemon

RUN yarn add cors express mysql express-session bcryptjs passport passport-local passport-jwt jsonwebtoken prisma @prisma/client dotenv nodemon

RUN cd api; npx prisma generate

CMD ["nodemon", "index.js"]
